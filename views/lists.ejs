<%- include("header") -%>

    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>
    
    <div class="box">
        <!-- For-loop for printing lists in new lines -->
        <% for(var i=0; i<newListItems.length; i++){ %>
            <div class="item">
                <input type="checkbox">
                <p> <%= newListItems[i] %> </p>
            </div>
        <% } %>

        <form class="item" action="/" method="POST">
            <input type="text" name="newItem" placeholder="Enter a new item" placeholder="Enter New Item" autocomplete="off">
            <button type="submit" name="list" value= <%= listTitle %>>+</button>
        </form>
        <script src="../app.js"></script>
    </div>  

<%- include("footer") -%>